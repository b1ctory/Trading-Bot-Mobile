<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/style_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cert_delete_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="40dp"
        android:text="오늘 검색 기록이 존재합니다. 한번 더 검색할까요?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/chery_blue"
        android:textSize="16sp"/>

    <LinearLayout
        android:weightSum="2"
        android:layout_below="@id/cert_delete_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cert_delete_dialog_cancel"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:id="@+id/cert_delete_dialog_ok"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textStyle="bold"
            android:textColor="@color/chery_blue"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginEnd="24dp"/>




    </LinearLayout>


</RelativeLayout>